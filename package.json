{
  "name": "picpay",
  "version": "1.0.0",
  "description": "",
  "main": "./src/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx ./src/server.ts",
    "build": "tsup src",
    "start": "node dist/server.cjs",
    "db:dev": "docker compose up db -d",
    "db:dev:rm": "docker compose rm db -s -f -v",
    "db:test": "docker compose up db-test -d",
    "db:test:rm": "docker compose rm db-test -s -f -v",
    "test": "vitest run --exclude ./src/test/*",
    "test:e2e": "dotenv -e .env.test vitest run ./src/test/transaction.e2e.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.0.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.7",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.3.0",
    "supertest": "^6.3.4",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
